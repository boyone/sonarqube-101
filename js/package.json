{
  "name": "vue-sonar-project",
  "version": "1.0.0",
  "description": "Simple Vue.js 2 project with SonarQube integration",
  "main": "src/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .js,.vue src/"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@babel/preset-env": "^7.28.0",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@vue/cli-service": "^5.0.8",
    "@vue/test-utils": "^1.3.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.20.0",
    "jest": "^26.6.3",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.14"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom"
  }
}
